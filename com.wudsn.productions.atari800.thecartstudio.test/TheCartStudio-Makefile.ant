<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable .jar for Project The!Cart Studio">
	<!--ANT 1.7 is required  -->
	<target name="create_run_jar">

		<!-- Create JAR file -->
		<jar destfile="tst/out/TheCartStudio.jar" filesetmanifest="mergewithoutmain">
			<manifest>
				<attribute name="Main-Class" value="com.wudsn.tools.thecartstudio.TheCartStudio" />
				<attribute name="Class-Path" value="." />
			</manifest>
			<fileset dir="bin" />
		</jar>

		<!-- Create Mac OS X app folder. -->
		<!-- The ".icns" file was created using http://iconverticons.com/online -->
		<jarbundler dir="tst/out" name="TheCartStudio" copyright="copyright" mainclass="com.wudsn.tools.thecartstudio.TheCartStudio" jar="tst/out/TheCartStudio.jar" jvmversion="1.5+" vmoptions="-Xms256M -Xmx1024M" shortname="The!Cart Studio" build="$${version}" icon="src/icons/main-16x16.icns" />
		<copy todir="tst/out/TheCartStudio.app/Contents/MacOS" overwrite="true">
			<fileset file="build/JavaApplicationStub" />
		</copy>

	</target>
</project>
